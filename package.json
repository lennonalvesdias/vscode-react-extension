{
    "name": "arsenal-soma-code-generator",
    "displayName": "Arsenal-Soma Code Generator",
    "description": "Gera código baseado no design system Soma e framework Arsenal.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onView:arsenalSomaChat",
        "onCommand:arsenalSoma.openChat"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "arsenalSoma.openChat",
                "title": "Abrir Arsenal-Soma Chat",
                "category": "Arsenal-Soma"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "arsenal-soma",
                    "title": "Arsenal-Soma",
                    "icon": "resources/chat.svg"
                }
            ]
        },
        "views": {
            "arsenal-soma": [
                {
                    "id": "arsenalSomaChat",
                    "name": "Chat",
                    "type": "webview",
                    "visibility": "visible"
                }
            ]
        },
        "configuration": {
            "title": "Arsenal-Soma",
            "properties": {
                "arsenalSoma.openaiApiKey": {
                    "type": "string",
                    "description": "API Key da OpenAI para geração de código",
                    "scope": "application"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "axios": "^1.6.7"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "eslint": "^8.57.0",
        "typescript": "^5.3.3"
    }
}