{
  "name": "ps-copilot",
  "displayName": "PS Copilot",
  "description": "Assistente de desenvolvimento React com múltiplos agentes especializados",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:psCopilot.chatView",
    "onView:psCopilot.explorerChatView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "psCopilot.openChat",
        "title": "Abrir PS Copilot Chat"
      },
      {
        "command": "psCopilot.openChatInExplorer",
        "title": "Abrir PS Copilot Chat no Explorer"
      },
      {
        "command": "psCopilot.manageAgents",
        "title": "Gerenciar Agentes do PS Copilot"
      },
      {
        "command": "psCopilot.configureApiKey",
        "title": "PS Copilot: Configurar API Key da OpenAI"
      },
      {
        "command": "psCopilot.clearApiKey",
        "title": "PS Copilot: Remover API Key da OpenAI"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "psCopilot",
          "title": "PS Copilot",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "psCopilot": [
        {
          "type": "webview",
          "id": "psCopilot.chatView",
          "name": "Chat",
          "icon": "media/icon.svg",
          "contextualTitle": "PS Copilot Chat"
        }
      ],
      "explorer": [
        {
          "id": "psCopilot.explorerChatView",
          "name": "PS Copilot Chat",
          "icon": "media/icon-chat.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "psCopilot.manageAgents",
          "when": "view == psCopilot.chatView",
          "group": "navigation"
        },
        {
          "command": "psCopilot.configureApiKey",
          "when": "view == psCopilot.chatView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "PS Copilot",
      "properties": {
        "psCopilot.apiUrl": {
          "type": "string",
          "default": "",
          "description": "(Opcional) URL personalizada para a API OpenAI (ex: para usar um proxy corporativo). Se deixado em branco, usará a URL padrão da OpenAI.",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && webpack --mode production",
    "watch": "tsc -watch -p ./ & webpack --mode development --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/glob": "^7.1.3",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "css-loader": "^6.2.1",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mocha": "^8.4.0",
    "style-loader": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "openai": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}